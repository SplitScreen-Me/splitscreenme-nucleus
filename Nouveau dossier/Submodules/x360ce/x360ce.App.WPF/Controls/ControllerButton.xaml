<UserControl x:Class="x360ce.App.Controls.ControllerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:x360ce.App.Controls"
             mc:Ignorable="d"
             Background="#01000000"
             d:DesignHeight="16"
             d:DesignWidth="16"
             Height="16"
             Width="16">

    <UserControl.Resources>
        <Style TargetType="Border" x:Key="ControllerMapButton" >
            <Setter Property="Background" Value="{StaticResource ColorBlue}"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Opacity" Value="0"/><!--Dot Opacity-->
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

    </UserControl.Resources>

    <Border Name="MouseEnterColor" Style="{StaticResource ControllerMapButton}"/>

</UserControl>
